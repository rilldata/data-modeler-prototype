{
  "name": "@rilldata/rill",
  "version": "0.15.0",
  "type": "module",
  "scripts": {
    "dev": "RILL_DEV=true vite dev",
    "build": "vite build",
    "install-and-build": "npm install && npm run build",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "test": "PLAYWRIGHT_TEST=true npx playwright test",
    "test:watch": "npm run test -- --watch",
    "manual-publish": "./build-tools/npm_publish.sh"
  },
  "devDependencies": {
    "@playwright/test": "^1.33.0",
    "@rilldata/svelte-query": "^4.29.20-0.0.3",
    "@sveltejs/adapter-static": "^1.0.0",
    "@sveltejs/kit": "1.30.0",
    "@tanstack/svelte-query": "npm:@rilldata/svelte-query@4.29.20-0.0.3",
    "autoprefixer": "^10.4.4",
    "axios": "^0.27.2",
    "playwright": "^1.33.0",
    "postcss-load-config": "^3.1.3",
    "svelte": "^4.0.0",
    "svelte-check": "^3.4.3",
    "svelte-preprocess": "^5.0.3",
    "tree-kill": "^1.2.2",
    "web-common": "*"
  }
}
